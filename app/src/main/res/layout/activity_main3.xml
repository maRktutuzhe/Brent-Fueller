<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:behavior_hideable="true"
    app:behavior_peekHeight="700dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context=".MainActivity3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                app:srcCompat="@drawable/baseline_close_24" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Больше информации"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info1" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info2" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info3" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info4" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info5" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="684295713"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@android:drawable/ic_popup_sync"
                    app:tint="@color/colorYellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="№ 684295713"
                    android:textColor="@color/colorLightGray" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:srcCompat="@android:drawable/radiobutton_off_background"
                    app:tint="@color/colorGreen" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:contentDescription="QR"
                app:srcCompat="@android:drawable/progress_indeterminate_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/abril_fatface"
                    android:text="0 B"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="GOLD"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+2 бонуса за каждые 100₽"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="Профиль"
            android:textColor="@color/colorYellow"
            app:tint="@color/colorYellow" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_credit_card_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="Способ оплаты"
            android:textColor="@color/colorYellow" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_card_giftcard_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="Промокоды и Акции"
            android:textColor="@color/colorYellow" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_notifications_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="Уведомления"
            android:textColor="@color/colorYellow" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_help_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="Вопросы и ответы"
            android:textColor="@color/colorYellow" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gray_button"
            android:drawableLeft="@drawable/baseline_library_books_24"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="О компании"
            android:textColor="@color/colorYellow" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:fontFamily="sans-serif-medium"
            android:padding="6dp"
            android:text="Соглашение на предоставление сервиса"
            android:textColor="@color/colorYellow"
            android:textSize="12sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_button"
            android:fontFamily="sans-serif-medium"
            android:padding="6dp"
            android:text="Политика конфиденциальности"
            android:textColor="@color/colorYellow"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Версия: 2.2.4"
            android:textColor="@color/colorLightGray" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>